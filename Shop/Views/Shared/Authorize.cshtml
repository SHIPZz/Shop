@model UserViewModel

@if (ViewBag.HasUser != null && !ViewBag.HasUser)
{
    <div class="alert alert-danger" role="alert">
        Данные неверные. Пожалуйста, проверьте их и попробуйте снова.
    </div>
}

<div class="d-flex justify-content-center">
    <div>
        <form asp-controller="Authorization" asp-action="Authorize" method="post"> 
            <div class="input-group mb-3">
                <span class="input-group-text" style="width: 80px;">Имя:</span>
                <div class="form-floating">
                    <input type="text" class="form-control" id="floatingName" asp-for="Username" placeholder="Username...">
                    <label for="floatingName">Username</label>
                </div>
            </div>
            <div class="input-group mb-3"> 
                <span class="input-group-text" style="width: 80px;">Пароль:</span>
                <div class="form-floating">
                    <input type="password" class="form-control" id="floatingPassword" asp-for="Password" placeholder="Password...">
                    <label for="floatingPassword">Password</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-lg d-block mx-auto w-65">Войти</button> 
        </form>
    </div>
</div>
